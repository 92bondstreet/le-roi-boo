{
  "name": "le-roi-boo",
  "private": true,
  "version": "0.0.0",
  "description": "Checks the availabilities of an agenda with Le Roi Boo alias BooKing.",
  "scripts": {
    "coveralls": "yarn db:migrate && jest --coverage && cat ./coverage/lcov.info | coveralls",
    "db:migrate": "knex migrate:latest",
    "db:rollback": "knex migrate:rollback",
    "test": "yarn db:migrate && jest --watch --coverage",
    "test-ci": "yarn db:migrate && jest --coverage"
  },
  "dependencies": {
    "coveralls": "^3.0.2",
    "knex": "^0.15.2",
    "moment": "^2.22.2",
    "moment-range": "^4.0.1",
    "moment-recur-ts": "^1.3.1",
    "sqlite3": "^4.0.2"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-module-resolver": "^3.1.1",
    "babel-preset-env": "^1.7.0",
    "eslint": "^5.6.1",
    "eslint-plugin-jest": "^21.24.1",
    "jest": "^23.6.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "*.js",
      "!sandbox.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
